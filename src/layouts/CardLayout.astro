---
export interface CardProps {
  ref: string;
  image_author: string;
  img: string;
  title: string;
  date: string;
  description: string;
  author: string;
}

const { image_author, img, title, date, description, author, ref } =
  Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 font-sans">
    <!-- Card Container -->
    <div
      class="max-w-sm mx-auto gap-4 bg-white rounded-lg shadow-lg overflow-hidden mt-10"
    >
      <!-- Imagen -->
      <div
        class="w-full h-56 bg-cover bg-center"
        style={{ backgroundImage: `url(${img})` }}
      >
        <!-- El background de la imagen es dinamico -->
      </div>

      <!-- Contenido -->
      <div class="p-6">
        <!-- Titulo -->
        <a class="text-2xl font-semibold text-gray-800 mb-2" href={ref}
          >{title}</a
        >

        <!-- Descripcion -->
        <p class="text-gray-600 text-base mb-4">{description}</p>

        <!-- Author y author_image -->
        <div class="flex items-center mt-6">
          <!-- Imagen del autor -->
          <img src={image_author} alt={title} class="w-10 h-10 rounded-full" />

          <!-- InformaciÃ³n del autor y fecha -->
          <div class="ml-4">
            <p class="text-gray-800 text-sm font-medium">{author}</p>
            <p class="text-gray-500 text-xs">{date}</p>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
